# IfcGit Server Configuration

# Security
SECRET_KEY=change-me-to-a-random-secret-key
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=1440

# Database
DATABASE_URL=postgresql+asyncpg://ifcgit:ifcgit@db:5432/ifcgit
POSTGRES_USER=ifcgit
POSTGRES_PASSWORD=ifcgit
POSTGRES_DB=ifcgit

# Redis
REDIS_URL=redis://redis:6379/0

# Storage
DATA_DIR=/data
REPOS_DIR=/data/repos
CACHE_DIR=/data/cache
WORKING_DIR=/data/working

# Fragment generation
NODE_CONVERTER_PATH=/app/convert_ifc.js
MAX_FULL_FRAGMENT_SIZE_MB=500

# Server
API_HOST=0.0.0.0
API_PORT=8000
LOG_LEVEL=info
CORS_ORIGINS=["http://localhost:3000","http://localhost:8080"]

# Nextcloud (optional)
NEXTCLOUD_ENABLED=false
NEXTCLOUD_URL=http://nextcloud:8080
